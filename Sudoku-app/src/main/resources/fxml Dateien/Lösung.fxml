<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="lösungVBox" alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Sudoku.controller.LösungController">
   <children>
      <ScrollPane fx:id="mainScrollPane" hbarPolicy="NEVER" />
      <VBox fx:id="bottomVBox" alignment="CENTER" style="-fx-background-color: grey;">
         <children>
            <HBox fx:id="meldungsHBox" alignment="CENTER">
               <children>
                  <Text fx:id="meldungstext" fill="#ee0d0d" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <HBox fx:id="buttonHBox" alignment="BOTTOM_CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleNeuButton" text="Neu">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox fx:id="schließenHBox" alignment="CENTER_RIGHT" fillHeight="false">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleCloseButton" text="Schließen">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" right="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
